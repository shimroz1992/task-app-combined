<div class="container">
  <div class="inner-container">
    <label>Title:</label>
    <input
      placeholder="Add task title"
      value={{this.title}}
      {{on "input" this.updateTitle}}
    />

    <label>Description:</label>
    <textarea
      placeholder="Add task description"
      value={{this.description}}
      {{on "input" this.updateDescription}}
    ></textarea>

<select id="status" {{on "change" this.updateStatus}}>
 <option value="to_do">To Do</option>
 <option value="in_progress">In Progress</option>
 <option value="done">Done</option>
</select>



    <label>Due Date:</label>
    <input
      type="datetime-local"
      value={{this.dueDate}}
      {{on "input" this.updateDueDate}}
    />

    <button onclick={{action "addTask"}} class="btn-add" type="button">Add Task</button>
  </div>

<div class="input-list">
    <h2>List of Tasks</h2>
    <ol class="item-list">
      {{#each this.tasks as |task|}}
        <div class="item">
          <li>{{task.title}} - {{task.description}} - {{task.status}} - {{task.dueDate}}</li>
          <button type="button" {{on "click" (fn this.handleDelete task)}}>Delete</button>
        </div>
      {{/each}}
    </ol>
  </div>
</div>

